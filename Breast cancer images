    {
      "cell_type": "code",
      "execution_count": null,
      "metadata": {
        "id": "atqFKzQV1XAJ"
      },
      "outputs": [],
      "source": [
        "# ---------------------------------------------------------\n",
        "# STEP 1: UPLOAD KAGGLE API TOKEN\n",
        "# ---------------------------------------------------------\n",
        "from google.colab import files\n",
        "uploaded = files.upload()    # Select breast_cancer.zip\n",
        "\n",
        "# SET UP KAGGLE API\n",
        "!pip install -q kaggle\n",
        "!mkdir -p ~/.kaggle\n",
        "!cp kaggle.json ~/.kaggle/\n",
        "\n",
        "# ---------------------------------------------------------\n",
        "# STEP 2: UNZIP THE DATASET\n",
        "# ---------------------------------------------------------\n",
        "import zipfile\n",
        "!kaggle datasets download-d username/\n",
        "breast-cancer\n",
        "!unzip-q breast-cancer-zip-d/ content/\n",
        "breast_cancer\n",
        "\n",
        "# Your dataset must now be:\n",
        "# /content/breast_cancer/train/\n",
        "# /content/breast_cancer/test/\n",
        "# /content/breast_cancer/validation/\n",
        "\n",
        "\n",
        "# ---------------------------------------------------------\n",
        "# STEP 3: DEFINE IMAGE PATHS\n",
        "# ---------------------------------------------------------\n",
        "train_dir = \"/content/breast_cancer/train\"\n",
        "test_dir = \"/content/breast_cancer/test\"\n",
        "val_dir = \"/content/breast_cancer/validation\"\n",
        "\n",
        "\n",
        "# ---------------------------------------------------------\n",
        "# STEP 4: IMAGE PREPROCESSING + AUGMENTATION\n",
        "# ---------------------------------------------------------\n",
        "from tensorflow.keras.preprocessing.image import ImageDataGenerator\n",
        "\n",
        "# ImageDataGenerator performs:\n",
        "# - rescaling (normalize pixels 0–1)\n",
        "# - augmentation (rotate, flip, zoom) only for training data\n",
        "train_gen = ImageDataGenerator(\n",
        "    rescale=1./255,            # normalize (0–255 → 0–1)\n",
        "    rotation_range=20,         # random rotation\n",
        "    zoom_range=0.2,            # random zoom\n",
        "    horizontal_flip=True       # random flip\n",
        ")\n",
        "\n",
        "# Validation and test do NOT change images\n",
        "# only rescale (no augmentation)\n",
        "val_gen = ImageDataGenerator(rescale=1./255)\n",
        "test_gen = ImageDataGenerator(rescale=1./255)\n",
        "\n",
        "\n",
        "# ---------------------------------------------------------\n",
        "# STEP 5: LOAD IMAGES USING flow_from_directory\n",
        "# ---------------------------------------------------------\n",
        "# This converts folder structure into labeled batch data\n",
        "train_data = train_gen.flow_from_directory(\n",
        "    train_dir,\n",
        "    target_size=(224, 224),     # resize images to 224×224\n",
        "    batch_size=32,              # train CNN with 32 images per batch\n",
        "    class_mode='categorical'    # multi-class labels (softmax)\n",
        ")\n",
        "\n",
        "val_data = val_gen.flow_from_directory(\n",
        "    val_dir,\n",
        "    target_size=(224, 224),\n",
        "    batch_size=32,\n",
        "    class_mode='categorical'\n",
        ")\n",
        "\n",
        "test_data = test_gen.flow_from_directory(\n",
        "    test_dir,\n",
        "    target_size=(224, 224),\n",
        "    batch_size=32,\n",
        "    class_mode='categorical'\n",
        ")\n",
        "\n",
        "\n",
        "# ---------------------------------------------------------\n",
        "# STEP 6: BUILD THE CNN MODEL\n",
        "# ---------------------------------------------------------\n",
        "from tensorflow.keras.models import Sequential\n",
        "from tensorflow.keras.layers import Conv2D, MaxPooling2D, Flatten, Dense, Dropout\n",
        "\n",
        "model = Sequential([\n",
        "\n",
        "    # INPUT + CONVOLUTION LAYER 1\n",
        "    # - Extracts basic features (edges, textures)\n",
        "    Conv2D(32, (3,3), activation='relu', input_shape=(224,224,3)),\n",
        "    MaxPooling2D(2,2),         # Reduce image size, keep strong features\n",
        "\n",
        "    # CONVOLUTION LAYER 2\n",
        "    # - Learns more complex features\n",
        "    Conv2D(64, (3,3), activation='relu'),\n",
        "    MaxPooling2D(2,2),\n",
        "\n",
        "    # CONVOLUTION LAYER 3\n",
        "    # - Learns deeper shapes/patterns\n",
        "    Conv2D(128, (3,3), activation='relu'),\n",
        "    MaxPooling2D(2,2),\n",
        "\n",
        "    # FLATTEN\n",
        "    # - Converts 3D feature maps → 1D vector for Dense layers\n",
        "    Flatten(),\n",
        "\n",
        "    # FULLY CONNECTED (DENSE) LAYER\n",
        "    # - Learns patterns to classify image\n",
        "    Dense(128, activation='relu'),\n",
        "    Dropout(0.5),  # Prevent overfitting\n",
        "\n",
        "    # OUTPUT LAYER (SOFTMAX)\n",
        "    # - One neuron per class (auto-detected)\n",
        "    Dense(train_data.num_classes, activation='softmax')\n",
        "])\n",
        "\n",
        "\n",
        "# ---------------------------------------------------------\n",
        "# STEP 7: COMPILE THE MODEL\n",
        "# ---------------------------------------------------------\n",
        "# - Adam optimizer: best for most CNNs\n",
        "# - Categorical crossentropy: multi-class loss\n",
        "# - Accuracy: performance metric\n",
        "model.compile(\n",
        "    optimizer='adam',\n",
        "    loss='categorical_crossentropy',\n",
        "    metrics=['accuracy']\n",
        ")\n",
        "\n",
        "\n",
        "# ---------------------------------------------------------\n",
        "# STEP 8: TRAIN THE CNN MODEL\n",
        "# ---------------------------------------------------------\n",
        "history = model.fit(\n",
        "    train_data,\n",
        "    epochs=20,              # number of learning cycles\n",
        "    validation_data=val_data\n",
        ")\n",
        "\n",
        "\n",
        "# ---------------------------------------------------------\n",
        "# STEP 9: EVALUATE ON TEST DATA\n",
        "# ---------------------------------------------------------\n",
        "test_loss, test_acc = model.evaluate(test_data)\n",
        "print(\"Test Accuracy:\", test_acc)\n",
        "\n",
        "\n",
        "# ---------------------------------------------------------\n",
        "# STEP 10: MAKE A PREDICTION ON NEW IMAGE\n",
        "# ---------------------------------------------------------\n",
        "from google.colab import files\n",
        "uploaded = files.upload()   # Upload a single image to test\n",
        "\n",
        "import numpy as np\n",
        "from tensorflow.keras.preprocessing import image\n",
        "\n",
        "img_path = list(uploaded.keys())[0]  # get file name\n",
        "img = image.load_img(img_path, target_size=(224,224))\n",
        "img_array = image.img_to_array(img) / 255.0   # normalize\n",
        "img_array = np.expand_dims(img_array, axis=0)  # create batch\n",
        "\n",
        "pred = model.predict(img_array)\n",
        "\n",
        "# Map index → class name\n",
        "class_names = list(train_data.class_indices.keys())\n",
        "\n",
        "print(\"Prediction:\", class_names[np.argmax(pred)])\n",
        "\n",
        "\n",
        "# ---------------------------------------------------------\n",
        "# STEP 11: SAVE MODEL\n",
        "# ---------------------------------------------------------\n",
        "model.save(\"breast_cancer_cnn.h5\")  # save trained model\n",
        "print(\"Model saved successfully!\")"
      ]
    }
  ]
}